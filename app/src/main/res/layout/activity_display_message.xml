<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.DisplayMessageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradation"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:ems="1"
            android:inputType="textPersonName"
            android:hint="Name"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:textColorHint="#fff"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/age_field"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:ems="1"
            android:inputType="number"
            android:hint="Age"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:textColorHint="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@id/name"
            />

        <EditText
            android:id="@+id/username_field"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:ems="1"
            android:inputType="text"
            android:hint="Username"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:textColorHint="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@id/age_field"
            />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:ems="1"
            android:inputType="phone"
            android:hint="Phone"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:textColorHint="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@id/username_field"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:ems="1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#fff"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/phone_field"/>

        <Button
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="SEND VERIFICATION CODE"
            android:textColor="#fff"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/password"
            />

        <EditText
            android:id="@+id/verification_field"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:ems="1"
            android:inputType="textEmailAddress"
            android:hint="Verification Code"
            android:background="#6ef4f4f4"
            android:drawablePadding="78dp"
            android:textColorHint="#fff"
            android:textAlignment="center"
            android:layout_below="@id/send_code"
            />

        <Button
            android:id="@+id/regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="Register!"
            android:textColor="#fff"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/verification_field"
            />

    </RelativeLayout>
</RelativeLayout>
